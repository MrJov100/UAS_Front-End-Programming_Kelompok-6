<!DOCTYPE html>
<html lang="en" ng-app="myApp">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/theme.css" />
    <link rel="stylesheet" href="/css/backToTopButton.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/navbar.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Tambahkan pustaka AngularJS -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  </head>
  <body ng-controller="MainController">
    <!-- TOMBOL Back to Top -->
    <button id="backToTopBtn" class="back-to-top">
      <img
        src="/assets/images/green-up.png"
        alt="Back to Top"
        id="backToTopImg"
      />
    </button>

    <nav id="navbar">
      <input type="checkbox" id="check" />

      <label for="check" class="checkbtn">
        <i class="fas fa-bars"></i>
      </label>

      <a href="/" id="logo"
        ><img src="/assets/images/logo.png" alt="FitSteps Logo"
      /></a>

      <div class="navbar-biasa">
        <a href="/">Home</a>
        <a href="/fit-share">Fit Share</a>
        <a href="/trendy-shoes">Trendy Shoes</a>
        <a href="/health-benefits">Health Benefits</a>
        <a href="/contact-us">Contact Us</a>
        <a href="/events">Upcoming Events</a>

        <% if (loggedIn) { %>
        <a href="/profile">Profile</a>
        <a href="/logout">Logout</a>
        <% } else { %>
        <a href="/login">Login</a>
        <a href="/signup">Daftar</a>
        <% } %>

        <!-- Tombol Mode Terang/Gelap -->
        <button id="themeToggleBtn" class="theme-toggle-btn">ðŸŒ™</button>
      </div>

      <a href="/" id="moto"
        ><img src="/assets/images/moto.png" alt="FitSteps Moto"
      /></a>
    </nav>

    <div class="popup-background hidden" id="popup">
      <div class="popup-content">
        <img src="/assets/images/brosur.png" alt="Brosur" class="popup-image" />
        <button class="close-btn" id="closeBtn">Close</button>
      </div>
    </div>

    <!-- bagian Carousel -->
    <section class="container carousel-container mt-5 pt-5">
      <div
        id="photographyCarousel"
        class="carousel slide carousel-fade"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="/assets/images/exercise-pic/EXERCISE1.jpg"
              class="d-block w-100"
              alt="Modern Building"
            />
          </div>
          <div class="carousel-item">
            <img
              src="/assets/images/exercise-pic/EXERCISE2.jpg"
              class="d-block w-100"
              alt="Nature Scenery"
            />
          </div>
          <div class="carousel-item">
            <img
              src="/assets/images/exercise-pic/EXERCISE3.jpg"
              class="d-block w-100"
              alt="Beautiful Sky"
            />
          </div>
          <div class="carousel-item">
            <img
              src="/assets/images/exercise-pic/EXERCISE4.jpg"
              class="d-block w-100"
              alt="Beautiful Sky"
            />
          </div>
          <div class="carousel-item">
            <img
              src="/assets/images/exercise-pic/EXERCISE5.jpg"
              class="d-block w-100"
              alt="Beautiful Sky"
            />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#photographyCarousel"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#photographyCarousel"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </section>

    <div class="content fade-in">
      <h1>{{ welcomeMessage }}</h1>
      <p>{{ description }}</p>
      <p>{{ additionalInfo }}</p>
      <br />
      <h4>{{ slogan }}</h4>
    </div>

    <div class="images-container fade-in">
      <img
        src="/assets/images/3Ways/1.png"
        alt="Image 1"
        class="scroll-image image1"
      />
      <img
        src="/assets/images/3Ways/2.png"
        alt="Image 2"
        class="scroll-image image2"
      />
      <img
        src="/assets/images/3Ways/3.png"
        alt="Image 3"
        class="scroll-image image3"
      />
    </div>

    <div class="cta-section fade-in">
      <h2>{{ ctaTitle }}</h2>
      <p>{{ ctaDescription }}</p>
      <a href="/pages/Health Benefits.html" class="cta-button"
        >HEALTH BENEFITS</a
      >
    </div>

    <div class="banner fade-in">
      <img src="/assets/images/banner.png" alt="FitSteps Banner" />
    </div>

    <!-- Placeholder for dynamically loaded newsletter form -->
    <div id="newsletter-placeholder"></div>

    <div id="footer-placeholder"><%- include('footer') %></div>

    <!-- AngularJS script -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const footer = document.getElementById("community");
        footer.classList.add("visible");
      });

      // Define AngularJS module and controller
      angular
        .module("myApp", [])
        .controller("MainController", function ($scope) {
          $scope.welcomeMessage = "Welcome to FitSteps!";
          $scope.description =
            "FitSteps is more than just a fitness platformâ€”it's a gateway to a healthy and active lifestyle!";
          $scope.additionalInfo =
            "Want to find the best workouts, understand health benefits, or follow the latest sports lifestyle trends?";
          $scope.slogan = "FitSteps has everything for you!";
          $scope.ctaTitle = "GET STARTED";
          $scope.ctaDescription =
            "Discover the benefits of exercising now, and start your healthy lifestyle today!";

          // Toggle volume function
          $scope.toggleVolume = function () {
            const video = document.getElementById("background-video");
            video.muted = !video.muted;
          };
        });
    </script>

    <script src="/scripts/home-script.js"></script>
    <script src="/scripts/theme-toggle.js"></script>
    <script src="/scripts/backToTopButton.js"></script>
    <script src="/scripts/footer.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
