<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read Forms</title>
</head>
<body>
    <h1>Data Forms Saya</h1>
    <% if (forms.length > 0){ %>
        <table border="1">
            <thead>
                <tr>
                    <th>Form Id</th>
                    <th>Nama Lengkap</th>
                    <th>Jenis Kelamin</th>
                    <th>Usia</th>
                    <th>Nomor Telepon</th>
                    <th>Email</th>
                    <th>Alamat</th>
                    <th>Kategori Acara</th>
                    <th>Riwayat Kesehatan</th>
                    <th>Foto Diri</th>
                </tr>
            </thead>
            <tbody>
                <% forms.forEach(form => { %>
                    <tr>
                        <td><%= form.id %></td>
                        <td><%= form.nama_lengkap %></td>
                        <td><%= form.jenis_kelamin %></td>
                        <td><%= form.usia %></td>
                        <td><%= form.nomor_telepon %></td>
                        <td><%= form.email %></td>
                        <td><%= form.alamat %></td>
                        <td><%= form.kategori_acara %></td>
                        <td><%= form.riwayat_kesehatan %></td>
                        <td>
                            <% if (form.foto_url) { %>
                              <img src="/<%= form.foto_url %>" alt="Foto Diri" width="100" />
                            <% } else { %>
                              Tidak ada foto
                            <% } %>
                        </td>
                    </tr>
                <% });  %>
            </tbody>
        </table>
    <% }else { %>
        <p>Tidak ada data forms untuk user ini.</p>
    <% } %>
</body>
</html>